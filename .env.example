# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database
DATABASE_URL=your_database_url_here

# Session Security (REQUIRED - generate with: openssl rand -base64 32)
SESSION_SECRET=your_session_secret_here

# Sentry Error Tracking (optional in development, recommended in production)
# Get your DSN from https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here

# Release/Build
APP_VERSION=0.0.0-dev

# Google OAuth (for user authentication)
VITE_GOOGLE_CLIENT_ID=your_google_client_id_here

# Google Admin API (for Google Workspace integration)
GOOGLE_ADMIN_EMAIL=admin@yourdomain.com
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_SERVICE_ACCOUNT_JSON=your_service_account_json_here

# Slack Integration
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_CHANNEL_ID=your_slack_channel_id_here

# Airtable Integration
AIRTABLE_TOKEN=your_airtable_token_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# OpenAI Integration
OPENAI_API_KEY=your_openai_api_key_here

# HubSpot Integration
HUBSPOT_ACCESS_TOKEN=your_hubspot_access_token_here

# Stripe Integration
STRIPE_SECRET_KEY=your_stripe_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =============================
# CRM Integration Providers
# =============================

# Mailgun (Email)
MAILGUN_API_KEY=your_mailgun_api_key_here
MAILGUN_DOMAIN=mg.yourdomain.com
MAILGUN_BASE_URL=https://api.mailgun.net/v3
MAILGUN_SIGNING_KEY=your_mailgun_webhook_signing_key_here
MAIL_FROM_DEFAULT="Your Company <noreply@mg.yourdomain.com>"

# Twilio (SMS & Voice)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# DocuSeal (E-Sign - optional)
DOCUSEAL_API_KEY=your_docuseal_api_key_here

# =============================
# Application URLs
# =============================
APP_BASE_URL=http://127.0.0.1:5001
PUBLIC_BOOKING_BASE_URL=http://localhost:3000/booking

# =============================
# Feature Flags (0 = disabled, 1 = enabled)
# =============================
ENABLE_MESSAGING=0
ENABLE_SCHEDULING=0
ENABLE_ESIGN=0
ENABLE_PAYMENTS=0
DISABLE_HUBSPOT_FALLBACK=0